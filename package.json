{
  "name": "youtube-crypto-bot",
  "version": "1.0.0",
  "description": "Automated YouTube bot for creating crypto news videos",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "setup:youtube": "tsx src/utils/youtubeAuth.ts",
    "verify": "tsx src/utils/verifySetup.ts"
  },
  "keywords": ["youtube", "crypto", "bot", "automation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.5.2",
    "googleapis": "^126.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "sharp": "^0.32.6",
    "canvas": "^2.11.2",
    "playwright": "^1.40.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/fluent-ffmpeg": "^2.1.24",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2"
  }
}

