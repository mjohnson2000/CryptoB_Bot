{
  "name": "youtube-crypto-bot",
  "version": "1.0.0",
  "description": "Automated YouTube bot for creating crypto news videos",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop youtube-crypto-bot",
    "restart:pm2": "pm2 restart youtube-crypto-bot",
    "logs:pm2": "pm2 logs youtube-crypto-bot",
    "status:pm2": "pm2 status",
    "monit:pm2": "pm2 monit",
    "setup:youtube": "tsx src/utils/youtubeAuth.ts",
    "check:youtube": "tsx src/utils/checkYouTubeChannel.ts",
    "verify": "tsx src/utils/verifySetup.ts"
  },
  "keywords": [
    "youtube",
    "crypto",
    "bot",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/xml2js": "^0.4.14",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "canvas": "^2.11.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^126.0.1",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.1",
    "sharp": "^0.32.6",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
